<?xml version="1.0" encoding="UTF-8"?>

<!-- Log4j 설정 파일의 Root 요소 -->

<!-- status - log4j2 설정 파일 자체 디버깅 레벨 -->
<Configuration status="info">
	<!-- 로그 메시지를 어디에 출력할 것인지, Console: 콘솔에 출력 -->
	<!-- java.util.logging에서는 ConsoleHandler 객체 사용해야 했었음 -->
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<!-- 출력 포맷 -->
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n" />
			<!-- %d - date %p - log level %m - log message %n - new line more pattern 
				- https://logging.apache.org/log4j/2.x/manual/layouts.html#patterns -->
		</Console>
		<File name="fout" fileName="logs/test.log" append="true">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>

	<!-- 로거 자체 레벨을 설정해주는 태그 -->
	<Loggers>
		<!-- 패키지 레벨 별로 로그 레벨 변경 -->
		<Logger name="dev.syntax.step02logging.step02exlib.another"
			level="debug" />
		<!-- Root logger가 처리할 로그 이벤트의 최소 로그레벨 -->
		<Root level="INFO">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="fout" />
		</Root>
	</Loggers>

</Configuration>